@model SignInViewModel

@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="SignIn" method="post">

			<input class="text hamada" asp-for="Email" name="email" placeholder="Email" required="">

			<input class="text hamada" asp-for="Password" placeholder="Password" required="">

			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" asp-for="RememberMe" class="checkbox" >
					<span>RememberMe!!</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNIN">
		</form>
		<p>If you don't have an Account? <a asp-action="SignUp"> Register Now!</a></p>
	</div>
</div>

@section ScriptValidations {
	<partial name="_ValidationScriptsPartial" />

}
