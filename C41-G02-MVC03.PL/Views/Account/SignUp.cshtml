@model SignUpViewModel

@{
    ViewData["Title"] = "Sign Up";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="SignUp" method="post">
			<input class="text hamada" asp-for="UserName" placeholder="Username" required="">
			
			<input class="text hamada" asp-for="FirstName" placeholder="First Name" required="">

			<input class="text hamada" asp-for="LastName" placeholder="Last Name" required="">		
			
			<input class="text hamada" asp-for="Email" name="email" placeholder="Email" required="">
			
			<input class="text hamada" asp-for="Password" placeholder="Password" required="">
			
			<input class="text hamada w3lpass" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" asp-formaction="IsAgree" class="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>Do you have an Account? <a asp-action="SignIn"> Login Now!</a></p>
	</div>
</div>

