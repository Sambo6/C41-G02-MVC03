@model IEnumerable<Employee>

@{
    ViewData["Title"] = "Employees";

}

<h1>All Employees </h1>
<br />
<br />

<a asp-controller="Employee" asp-action="Create" class="btn btn-primary ">Create New Employee :</a>
<br />

@if (Model.Count() > 0)
{
    <table class="mt-4 table table-striped table-hover">
        <thead>
            <tr>


                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.Age)</th>
                <th>@Html.DisplayNameFor(D => D.Address)</th>
                <th>@Html.DisplayNameFor(D => D.Salary)</th>
                <th>@Html.DisplayNameFor(D => D.IsActive)</th>
                <th>@Html.DisplayNameFor(D => D.Email)</th>
                <th>@Html.DisplayNameFor(D => D.Gender)</th>

                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var Employee in Model)
            {
                <tr>

                    <td>@Html.DisplayFor(E => Employee.Name)</td>
                    <td>@Html.DisplayFor(E => Employee.Age)</td>
                    <td>@Html.DisplayFor(E => Employee.Address)</td>
                    <td>@Html.DisplayFor(E => Employee.Salary)</td>
                    <td>@Html.DisplayFor(E => Employee.IsActive)</td>
                    <td>@Html.DisplayFor(E => Employee.Email)</td>
                    <td>@Html.DisplayFor(E => Employee.Gender)</td>

                    <td>
                        <a asp-controller="Employee" asp-action="Details" asp-route-id="@Employee.Id" class="btn btn-warning"><i class="fas fa-eye mr-1"></i>Details</a>
                    </td>
                    <td>
                        <a asp-controller="Employee" asp-action="Edit" asp-route-id="@Employee.Id" class="btn btn-success"><i class="fas fa-edit mr-1"></i>Update</a>
                    </td>
                    <td>
                        <a asp-controller="Employee" asp-action="Delete" asp-route-id="@Employee.Id" class="btn btn-danger"><i class="fas fa-trash mr-1"></i>Delete</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 alert alert-warning">
        <h3>
            There are No Employee :(
        </h3>
    </div>
}

